<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/header_bg"
            android:scaleType="fitXY"
            android:layout_marginTop="-130dp"
            android:layout_width="match_parent"
            android:layout_height="370dp"/>
        <RelativeLayout
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Profile"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/rubik_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/profileName"
                    android:layout_marginTop="-5dp"
                    tools:text="Rafli Rai Rizky"
                    android:textSize="35sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Nama"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/colorMatte"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/profileDataName"
                tools:text="Rafli Rai Rizky"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/colorMatte"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Rayon"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/colorMatte"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/profileDataRayon"
                tools:text="cic5"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/colorMatte"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Email"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/colorMatte"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/profileDataEmail"
                tools:text="rayon@gmail.com"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/colorMatte"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnLogout"
                android:backgroundTint="@color/colorGreenBg"
                android:layout_marginTop="25dp"
                android:text="Logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>